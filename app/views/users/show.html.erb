
<center>
<div class="user_recipe">
 <p><%=current_user.user_name%>'s recipes</p>
</div>
</center>

  <div class="row">
<div class="usr">
  <div class="shadow">
</br>

    <div class="category">
      <div class="container-fluid">
        <div class="row" >

      <% @recipes.each do |recipe| %>

<div class="col-lg-6">

      <table class="table-rounded">
         <tr>
            <th colspan="2"><%= link_to recipe.name, "/recipes/#{recipe.id}" %></th>
         </tr>
         <tr>
             <td>  <%= image_tag("recipeimages/#{rand(18)+1}.jpg")%></td>
         </tr>
         <tr> <td> <h3>Rating:
           <%if recipe.total_rating == 'No reviews available'%>
            <%= recipe.total_rating%>
            <%else%>
            <%  recipe.total_rating.times do %>
              &starf;
                <%end%>
              <%end%> </h3>
         </td>  </tr>
      </table>
      </br>
    </div>


 <%end %>

</div>


  </div>
<%= will_paginate @recipes%>

</div>
