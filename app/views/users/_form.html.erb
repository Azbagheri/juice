<div >

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <p>Oops - there were problems with your submission. Please fix the following:</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>


  <div class="field signup_fields">
<br>
     <%= f.text_field :user_name, placeholder: ' Create a user name' %>
  </div>

  <div class="field signup_fields">
<br>
     <%= f.text_field :email, placeholder: ' Enter your email' %>
  </div>

  <div class="field signup_fields">
<br>
     <%= f.password_field :password, placeholder: ' Create a password'%>
  </div>
  <div class="field signup_fields">
<br>
     <%= f.password_field :password_confirmation, placeholder: ' Enter password again' %>
  </div>
<br>
  <div class="field">
     <%= f.submit "Save" %>
  </div>

<% end %>

</div>
