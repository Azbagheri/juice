<h2>Create A Recipe</h2>

<style>
body {background-color: #8cc63f;}
</style>

<div class="recipe_form">
<%= form_for @recipe do |f|%>


    <%=f.fields_for :ingredients_recipes do |r|%>
    <%= render 'ingredients_recipe_fields', :f => r %>
    <%end%>
    <div class = "links">
        <%= link_to_add_association 'add ingredient', f, :ingredients_recipes %>
    </div><!-- /.links -->


<br>
<br>
  </div>
  <%= f.submit %>
<%end%>
