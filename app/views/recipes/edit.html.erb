<div class="recipe_form">
<h1><%= @recipe.name %> </h1>

<%= form_for @recipe do |f|%>

<%= f.label :name %>
<%= f.text_field :name, :size => 40 %>
<br>
<br>
  <div id="ingredients_recipes">
    <%=f.fields_for :ingredients_recipes do |ingredient_recipe|%>
    <%= render 'ingredients_recipe_fields', f: ingredient_recipe %>
    <%end%>
  </div>

  <div class = "links">
      <%= link_to_add_association 'add ingredient', f, :ingredients_recipes %>
  </div>
    <%= f.submit %>
<%end%>
</div>
