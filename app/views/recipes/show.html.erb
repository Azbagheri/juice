<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <div class="page-header">
    <h1><%= @recipe.name %></h1>
      </div>
    </div>
    <div class="col-md-4">
      <h2>
        Juicing Article
      </h2>
      <p> Here will be a really cool article about juicing
      </p>
      <p>
        <a class="btn" href="#">View details »</a>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">


      <img src="/assets/glass.jpg" alt="apple">
        <!-- <img  src="assets/green.jpg" alt="juice"> -->
    </div>
    <div class="col-md-4">
      <h3>Ingredient List</h3>
      <ul >
        <% @recipe.ingredients_recipes.each do |ingredient_recipe| %>
          <li style="list-style-type:square"><b><%= ingredient_recipe.ingredient.name %></b></li>
          <li style="list-style-type:none" > Quantity: <%= ingredient_recipe.quantity%> <%= ingredient_recipe.unit.unit_name%></li>
        <% end %>
      </ul>
    </div>


        <button type="submit" class="btn btn-default">
          Submit
        </button>
      </form>
    </div>

    <div class="col-md-4">
      <img alt="Bootstrap Image Preview" src="http://lorempixel.com/140/140/" class="img-rounded" />
    </div>
  </div>
</div>
<h4>Ratings</h4>

        Which Juicer should you buy
      </h2>
      <p> Let us show you our findings</p>
      <p>
        <a class="btn" href="#">View details »</a>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">


        <%= form_for([@recipe, @review]) do |f| %>
            <h4> How do you like the Juice</h4>
            <div>
                <%= f.radio_button :rating, 1 %>
                <%= f.label :rating_1, "$" %>
                <%= f.radio_button :rating, 2 %>
                <%= f.label :rating_2, "$$" %>
                <%= f.radio_button :rating, 3%>
                <%= f.label :rating_3, "$$$" %>
                <%= f.radio_button :rating, 4 %>
                <%= f.label :rating_4, "$$$$" %>
                <%= f.radio_button :rating, 5 %>
                <%= f.label :rating_5, "$$$$$$" %>
            </div>
            <div>
                  <%= f.label :comment %><br />
                  <%= f.text_area :comment %>
            </div>
            <div>
                  <%= f.submit %>
            </div>
        <% end %>




    <p><h3>Reviews for <%= @recipe.name %></h3></p>

      <% @recipe.reviews.each do |review| %>
        <p>

          <b>  Comment:</b><%= review.comment %></br>
<% if review.user != nil %>
              <b> here is my rating:</b> <%= review.user.user_name %></br>
              <b>on this date:</b> <%= review.created_at%>
              <% end %>
        </p>
        <% end %>

  </div>


  <div class="col-md-4">
    <h3>HERE WILL GO THE NUTRITION VALUES</h3>
    <table class = "nutrition_facts">
      <thead>
        <tr>
          <th>Nutrition facts</th>
        </tr>
        <tr>
          <td>Serving Size 1/2 cup</td>
          <td>125 g</td>
        </tr>
      </thead>
        <tr class = "nutrient_cell">
          <td class = "left_cell"> Amount per serving</td>
          <td>%Daily Value</td>
        </tr>
        <tr class = "nutrient_cell">
          <td class = "left_cell">Calories <%=@recipe.get_nutrient('calory')%></td>
        </tr>
        <tr>
          <td class = "left_cell">Total Fat</td>
        </tr>
        <tr>
          <td class = "sub_cell left_cell">Saturated Fat</td>
        </tr>
        <tr class = "nutrient_cell">
          <td class = "sub_cell">Trans Fat</td>
        </tr>
        <tr class = "nutrient_cell">
          <td>Cholestrol 0</td>
          <td>0%</td>
        </tr>
        <tr class="nutrient_cell">
          <td>Sodium <%=@recipe.get_nutrient('sodium')%></td>
          <td><%=@recipe.daily_value('sodium')%> %</td>
        </tr>
        <tr>
          <td> Total Carbohydrates <%=@recipe.get_nutrient('carbohydrate')%></td>
          <td><%=@recipe.daily_value('carbohydrate')%> %</td>
        </tr>
        <tr class="nutrient_cell">
          <td>Dietary Fiber <%= @recipe.get_nutrient("fiber")%></td>
          <td><%=@recipe.daily_value("fiber")%> %</td>
        </tr>
        <tr class="nutrient_cell" >
          <td>Sugars <%= @recipe.get_nutrient("sugar")%></td>
        </tr>
        <tr >
          <td>Protein <%= @recipe.get_nutrient("protein")%></td>
        </tr>
        <tr class = "nutrient_cell">
          <td>Vitamin A</td>
          <td><%=@recipe.daily_value("vitA")%> %</td>
        </tr>
        <tr class = "nutrient_cell">
          <td>Vitamin C</td>
          <td><%=@recipe.daily_value("vitC")%> %</td>
        </tr>
        <tr class = "nutrient_cell">
          <td>Calcium</td>
          <td><%=@recipe.daily_value('calcium')%> %</td>
        </tr>
        <tr class = "nutrient_cell">
          <td>Iron</td>
          <td><%=@recipe.daily_value('iron')%> %</td>
        </tr>
        <tfoot>
          <td>Percent Daily Values are based on a 2,000 calori diet.</td>
        </tfoot>
      </table>
    </div>
    <div class="col-md-4">
      <img alt="Bootstrap Image Preview" src="http://lorempixel.com/140/140/" class="img-rounded" />
    </div>
  </div>
</div>
