<h1><%= @recipe.name %></h1>
Name: <%= @recipe.name %><br>
Ingredients:

<% @recipe.ingredients_recipes.each do |ingredient_recipe| %>
  Name: <%= ingredient_recipe.ingredient.name %><br>
  quantity: <%= ingredient_recipe.quantity %><br>
<% end %>

<%= link_to "All Recipes", recipes_path %><br>

<%= link_to "Back to profile", user_path  %>

<h3>Reviews</h3>
  <p> Reviews for <%= @recipe.name %></p>
    <%= @reviews.each do |review| %>
      <p>
        <%= review.comment %>
      </p>
    <% end %>
  </p>
<h4>New Review</h4>
 <%= form_for([@recipe],[@review]) do |f| %>
 <div class="field">
       <%= f.label :comment %><br />

     </div>
     <div class="actions">
       <%= f.submit %>
     </div>
   <% end %>

