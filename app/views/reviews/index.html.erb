
<p><h3>Reviews for <%= @recipe.name %></h3></p>
<ul class="reviews">
<% @reviews.each do |review| %>
  <% if review.user != nil %>
    <li>
      Comment:
      <%= review.comment %>
    </li>
    <li id = 'rate'>
      <span class = 'star'>&starf;</span>
      <% review.rating.times do %>
        &starf;
      <% end %>
    </li>
    <li>
      By
      <span class = 'commenter'><%=link_to  review.user.user_name, user_path(current_user) %>
      </span>
      on <%= review.created_at.strftime('%b %e, %Y')%>
    </li><br />
  <% end %>
<% end %>
</ul>
