<%= form_tag sessions_path, :method => :post do %>
  <div class="field login_fields">
    <%= label_tag :email %><br />
    <%= text_field_tag :email,params[:user_email], placeholder: 'email' %>
  </div>
<br>

  <div class="field login_fields">
    <%= label_tag :password %><br />
    <%= password_field_tag :password,params[:user_password], placeholder: 'password' %>
  </div>

<br>

  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
